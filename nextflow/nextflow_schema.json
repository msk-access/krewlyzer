{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/msk-access/krewlyzer//nextflow_schema.json",
  "title": "msk-access/krewlyzer pipeline parameters",
  "description": "Fragmentomics Feature Extraction Pipeline for cfDNA Analysis",
  "type": "object",
  "$defs": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "required": ["outdir"],
      "properties": {
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "./results"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/input_output_options"
    }
  ],
  "properties": {
    "samplesheet": {
      "type": "string",
      "format": "file-path",
      "description": "CSV with columns: sample, bam, mfsd_bam, meth_bam, vcf, bed, maf, single_sample_maf, assay, pon, targets"
    },
    "help": {
      "type": "boolean",
      "description": "Display help message"
    },
    "ref": {
      "type": "string"
    },
    "targets": {
      "type": "string"
    },
    "genome": {
      "type": "string",
      "default": "hg19"
    },
    "gc_correct": {
      "type": "boolean",
      "default": true
    },
    "pon_model": {
      "type": "string"
    },
    "asset_dir": {
      "type": "string"
    },
    "bait_padding": {
      "type": "integer",
      "default": 50
    },
    "wps_anchors": {
      "type": "string"
    },
    "wps_background": {
      "type": "string"
    },
    "mapq": {
      "type": "integer",
      "default": 20
    },
    "minlen": {
      "type": "integer",
      "default": 65
    },
    "maxlen": {
      "type": "integer",
      "default": 1000,
      "description": "Maximum fragment length (default: 1000 for extended FSD range)"
    },
    "skip_duplicates": {
      "type": "boolean",
      "default": true
    },
    "require_proper_pair": {
      "type": "boolean",
      "default": true
    },
    "exclude_regions": {
      "type": "string"
    },
    "threads": {
      "type": "integer",
      "default": 8
    },
    "verbose": {
      "type": "boolean"
    },
    "generate_json": {
      "type": "boolean",
      "default": true
    },
    "skip_target_regions": {
      "type": "boolean",
      "description": "Force WGS mode (ignore bundled targets from --assay)"
    },
    "skip_pon": {
      "type": "boolean",
      "description": "Skip PON z-score normalization"
    },
    "no_tfbs": {
      "type": "boolean",
      "description": "Disable TFBS entropy analysis"
    },
    "no_atac": {
      "type": "boolean",
      "description": "Disable ATAC entropy analysis"
    },
    "monochrome_logs": {
      "type": "boolean"
    },
    "test_data_base": {
      "type": "string"
    },
    "use_runall": {
      "type": "boolean",
      "default": true
    },
    "pon_variant": {
      "type": "string",
      "default": "all_unique"
    },
    "duplex": {
      "type": "boolean",
      "default": true
    },
    "disable_e1_aggregation": {
      "type": "boolean"
    },
    "region_mds_e1_only": {
      "type": "boolean"
    },
    "custom_config_version": {
      "type": "string",
      "default": "master"
    },
    "custom_config_base": {
      "type": "string",
      "default": "https://raw.githubusercontent.com/nf-core/configs/master"
    }
  }
}
